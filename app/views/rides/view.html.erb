<%=render 'navbar'%>

<form action='/addToCart' method='POST'>
<div class="font-[sans-serif] p-20">
      <div class="p-6 lg:max-w-6xl max-w-2xl mx-auto">
        <div class="grid items-start grid-cols-1 lg:grid-cols-2 gap-8">
            <h2 class="text-2xl font-extrabold text-gray-800">from: <%=@ride.from%></h2>
            <h2 class="text-2xl font-extrabold text-gray-800">to: <%=@ride.to%></h2>
            <div class="flex flex-wrap gap-4 mt-4">
              <p class="text-gray-800 text-xl font-bold">$<%=@ride.price_share%></p>
              <%
=begin%>
 <p class="text-gray-400 text-xl"><strike>$16</strike> <span class="text-sm ml-1">Tax included</span></p> 
<%
=end%>
            </div>
            <div class="flex space-x-2 mt-4">
              <svg class="w-5 fill-gray-800" viewBox="0 0 14 13" fill="none"
                xmlns="http://www.w3.org/2000/svg">
                <path
                  d="M7 0L9.4687 3.60213L13.6574 4.83688L10.9944 8.29787L11.1145 12.6631L7 11.2L2.8855 12.6631L3.00556 8.29787L0.342604 4.83688L4.5313 3.60213L7 0Z" />
              </svg>
              <svg class="w-5 fill-gray-800" viewBox="0 0 14 13" fill="none"
                xmlns="http://www.w3.org/2000/svg">
                <path
                  d="M7 0L9.4687 3.60213L13.6574 4.83688L10.9944 8.29787L11.1145 12.6631L7 11.2L2.8855 12.6631L3.00556 8.29787L0.342604 4.83688L4.5313 3.60213L7 0Z" />
              </svg>
              <svg class="w-5 fill-gray-800" viewBox="0 0 14 13" fill="none"
                xmlns="http://www.w3.org/2000/svg">
                <path
                  d="M7 0L9.4687 3.60213L13.6574 4.83688L10.9944 8.29787L11.1145 12.6631L7 11.2L2.8855 12.6631L3.00556 8.29787L0.342604 4.83688L4.5313 3.60213L7 0Z" />
              </svg>
              <svg class="w-5 fill-gray-800" viewBox="0 0 14 13" fill="none"
                xmlns="http://www.w3.org/2000/svg">
                <path
                  d="M7 0L9.4687 3.60213L13.6574 4.83688L10.9944 8.29787L11.1145 12.6631L7 11.2L2.8855 12.6631L3.00556 8.29787L0.342604 4.83688L4.5313 3.60213L7 0Z" />
              </svg>
              <svg class="w-5 fill-[#CED5D8]" viewBox="0 0 14 13" fill="none"
                xmlns="http://www.w3.org/2000/svg">
                <path
                  d="M7 0L9.4687 3.60213L13.6574 4.83688L10.9944 8.29787L11.1145 12.6631L7 11.2L2.8855 12.6631L3.00556 8.29787L0.342604 4.83688L4.5313 3.60213L7 0Z" />
              </svg>
            </div>
            <div class="mt-8">
              <h3 class="text-lg font-bold text-gray-800">Seats</h3>
              <div class="flex flex-wrap gap-4 mt-4">
              <%@ride.seats.times do |i|%>
                <button type="button" class="w-12 h-12 border-2 hover:border-gray-800 font-bold text-sm rounded-full flex items-center justify-center shrink-0"><%=i%></button>
              <%end%>
              </div>
              <button type="submit" class="w-full mt-4 px-4 py-3 bg-gray-800 hover:bg-gray-900 text-white font-bold rounded">Add to cart</button>
            </div>
            <div class="mt-8">
              <h3 class="text-lg font-bold text-gray-800">About the ride</h3>
              <ul class="space-y-3 list-disc mt-4 pl-4 text-sm text-gray-800">
                <li>Time : <%=@ride.time%></li>
                <li>Offered by : <%=@ride.user.full_name%></li>
                <li>Created At : <%=@ride.created_at%></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    </form>